---
import Section from '../Section.astro'
import { projects } from '@cv'
---

<Section title='Projects'>
  <ul class=''>
    {
      projects.map(({ name, url, description, isActive, highlights, github }) => (
        <li class='rounded-lg  px-2 py-1 mr-2 mb-4 border-2 border-gray-300 '>
          <article class='flex flex-col h-[100%]'>
            <header class='basis-1'>
              <a href={url} title={`Ver el proyecto ${name}`} class='flex gap-2'>
                <h3 class='font-bold mb-2 text-gray-700 hover:underline'>{name}</h3>
                {isActive ? (
                  <span class='text-lg text-green-500 '>&bull;</span>
                ) : (
                  <span class='text-lg  text-gray-500 '>&bull;</span>
                )}
              </a>
              <p class='mb-4'>{description}</p>
            </header>
            <footer>
              {highlights.map((highlight) => (
                <span class='text-xs rounded-lg bg-gray-200 px-2 py-1 mr-2 mb-4'>{highlight}</span>
              ))}
            </footer>
          </article>
        </li>
      ))
    }
  </ul>
</Section>

<style>
  ul {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
    gap: 1rem;
  }
  header {
    flex: 1;
  }
</style>
