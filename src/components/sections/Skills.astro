---
import Section from '../Section.astro'
import { skills } from '@cv'
---

<Section title='Skills'>
  <ul class="flex flex-wrap">
    {
      skills.map(({ name, level }) => (
        <li class="rounded-lg bg-gray-200 px-2 py-1 mr-2 mb-4">
          <span class="text-xs">{name}</span>
        </li>
      ))
    }
  </ul>
</Section>


